<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/Bakery"
    tools:context=".MemberPanel">

    <TextView
        android:id="@+id/txtSprinklesBakery10"
        android:layout_width="279dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="@font/aclonica"
        android:text="Sprinkles bakery"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtMemberPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMemberPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/aclonica"
        android:text="Member Panel"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSprinklesBakery10" />

    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:text="Create Account "
        app:layout_constraintBottom_toTopOf="@+id/btnViewCupcakes1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMemberPanel" />

    <Button
        android:id="@+id/btnViewCupcakes1"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:text="View Cupcakes"
        app:layout_constraintBottom_toTopOf="@+id/btnOrderCupcakes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAccount" />

    <Button
        android:id="@+id/btnOrderCupcakes"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:text="Order Cupcakes"
        app:layout_constraintBottom_toTopOf="@+id/btnViewOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewCupcakes1" />

    <Button
        android:id="@+id/btnViewOrder"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:layout_marginBottom="156dp"
        android:text="View Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOrderCupcakes" />
</androidx.constraintlayout.widget.ConstraintLayout>